<%= form_for @topic do |f| %>

  <div class="form-group">
    <%= f.label :title%>
    <%= f.text_field :title, class: "form-control", placeholder: "Type the title of the topic" %>
  </div>
  <div class="form-group">
    <%= f.submit :submit, class: "form-control", class:'btn btn-success' %>
  </div>

<% end %>
